@{
}
@model StoreManagement.Models.ShoppingCart
<h2>Your Cart</h2>
<table class="table">
    <thead>
        <tr>
            <th>Food</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Note</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.NameFood</td>
                <td>@item.Price</td>
                <td>
                    <input type="number" class="input-quantity-food" data-food-id="@item.IdFood" value="@item.Quantity" min="1" max="999" />
                </td>
                <td class="total-price-food" id="total-@item.IdFood">@(item.Price * item.Quantity)</td>
                <td>
                    <input type="text" class="input-notes" name="notes" value="@item.Notes" data-food-id="@item.IdFood" placeholder="Notes..." />
                </td>
                <td>
                    <form action="/customer/order/deletefromcart" name="foodId" value="@item.IdFood" method="get">
                        <input type="hidden" name="foodId" value="@item.IdFood" />
                        <button type="submit">Remove</button>
                    </form>
                </td>
            </tr>
        }
        <tr>
            <td colspan="5">
                <form action="/customer/order/submitorder" method="post">
                    <button type="submit">Submit</button>
                </form>
            </td>
        </tr>
    </tbody>
</table>
<div style="display: flex">
    <a href="/customer/order/@ViewBag.idStore/@ViewBag.idTable">Back To Orders</a>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.input-notes').change(function () {
            var foodId = $(this).data('food-id');
            var notes = $(this).val();

            $.ajax({
                url: '/customer/order/submitorder',
                type: 'POST',
                data: {
                    foodId: foodId,
                    notes: notes
                },
                success: function (response) {
                    console.log('Đã cập nhật ghi chú thành công!');
                },
                error: function (error) {
                    console.error('Lỗi khi cập nhật ghi chú:', error);
                }
            });
        });
    });
</script>
