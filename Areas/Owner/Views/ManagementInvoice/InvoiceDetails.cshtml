@{
}
@model StoreManagement.DTO.InvoiceDTO


<div class="container pt-4">
    <div class="row">
        <div class="col-2 fw-bold">
            Mã hóa đơn: @Model.Id
        </div>
        <div class="col-2 fw-bold">
            Mã đơn đặt hàng: @ViewBag.Order.Id
        </div>
        <div class="col-2 fw-bold">
            Số bàn: @ViewBag.order.TableId
        </div>
        <div class="col-4 fw-bold">
            Ngày tạo: @Model.PayTime.ToString("HH:mm:ss dd-MM-yyyy")
        </div>
        
        </div>
        <h3 class="text-center mt-3">Chi tiết đơn đặt hàng</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Tên món ăn</th>
                    <th>Số lượng</th>
                    <th>Giá</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var orderDetail in ViewBag.OrderDetail)
                {
                    <tr>
                        <td>@orderDetail.FoodItem.Name</td>
                        <td>@orderDetail.Quantity</td>
                        <td>@orderDetail.Price</td>
                    </tr>
                }

            </tbody>
        </table>
    <div class="d-flex justify-content-end invoice-total">
        <div class="">
            <div class=" fw-bold text-end">
                Chi phí: @Model.Charge
            </div>
            <div class=" fw-bold text-end mt-2">
                Tổng tiền: @Model.TotalPrice
            <div>
                    <a href="/owner/managementinvoice/listinvoice" class="btn btn-red-custom mt-2">Trở về</a>
            </div>
        </div>
        
    </div>
    

<style>
    .invoice-total {
    }

</style>