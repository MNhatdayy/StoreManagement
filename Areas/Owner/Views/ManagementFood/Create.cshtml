@{
    ViewData["Title"] = "Add FoodItem";
}
@model StoreManagement.DTO.FoodItemDTO
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="bg-white vh-100 mt-4">
    <div class="edit--wrapper container border shadow rounded-3 p-4 w-75">
        <header class="fw-bold fs-5 text-center text-black mb-2">Thêm món ăn</header>
        <div class="form-edit">
            <form action="/owner/managementfood/create" enctype="multipart/form-data" method="post">
                <div class="row">
                    <div class="form-group col-4">
                        <label asp-for="Name">Tên món ăn</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="Price">Giá tiền</label>
                        <input asp-for="Price" class="form-control" required />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="FoodCategoryId">Loại món ăn</label>
                        <select asp-for="FoodCategoryId" asp-items="ViewBag.FoodCategories" class="form-control">
                            <option value="">Select a category...</option>
                        </select>
                        <span asp-validation-for="FoodCategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="Description">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" required></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group col-6">
                        <label for="uFile">Hình ảnh</label>
                        <input type="file" name="uFile" class="form-control" />
                    </div>
                </div>

                <div class="d-flex align-items-center gap-2 mt-4">
                    <button type="submit" class="btn btn-primary-custom">Tạo</button>
                    <a href="/owner/managementfood/index" class="btn btn-red-custom">
                        Trở về
                    </a>
                </div>

            </form>
        </div>
    </div>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
<script>
    document.getElementById('imageInput').addEventListener('change', function (event) {
        var output = document.getElementById('previewImage');
        if (this.files && this.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                output.src = e.target.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(this.files[0]);
        }
    });
</script>
