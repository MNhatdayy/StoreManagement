@model StoreManagement.DTO.StoreDTO
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Add Store";
}

<h2>Add Store</h2>
<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="StoreName"></label>
        <input asp-for="StoreName" class="form-control" />
        <span asp-validation-for="StoreName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AddressStore"></label>
        <input asp-for="AddressStore" class="form-control" />
        <span asp-validation-for="AddressStore" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserId">User</label>
        <select asp-for="UserId" asp-items="ViewBag.appUsers" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>




