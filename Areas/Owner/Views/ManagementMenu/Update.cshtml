@{
    ViewData["Title"] = "Update Menu";
}
@model StoreManagement.DTO.MenuDTO

<div class="container">
    <h2>Edit Table</h2>
    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="StoreId"></label>
            <input asp-for="StoreId" class="form-control" />
            <span asp-validation-for="StoreId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-controller="ManagementMenu" asp-action="Index">
        <button type="button" class="btn btn-info">Return Menu</button>
    </a>
    </form>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}