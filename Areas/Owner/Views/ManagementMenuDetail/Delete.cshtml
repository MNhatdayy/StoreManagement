@{
    ViewData["Title"] = "Delete MenuDetail";
}
@model StoreManagement.DTO.MenuDetailDTO
<h2>Delete Food</h2>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="MenuId" />
    <input type="hidden" asp-for="FoodItemId" />
    <p>Are you sure you want to delete food with ID : @Model.FoodItemId</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="ManagementMenu" asp-action="Index">
        <button type="button" class="btn btn-info">Return Menu</button>
    </a>
</form>
