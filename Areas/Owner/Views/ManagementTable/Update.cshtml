@{
    ViewData["Title"] = "Update Table";
}
@model StoreManagement.DTO.TableDTO

<div class="bg-white vh-100 d-flex align-items-center">
    <div class="edit--wrapper container border shadow rounded-3 p-4 w-75">
        <header class="fw-bold fs-5 text-center text-black mb-2">Chỉnh sửa thông tin người dùng</header>
        <div class="form-edit">
            <form action="/owner/managementtable/update" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Status"></label>
                    <select asp-for="Status" class="form-control">
                        <option value="true">True</option>
                        <option value="false">False</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StoreID"></label>
                    <input asp-for="StoreID" type="number" class="form-control" />
                    <span asp-validation-for="StoreID" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary-custom">Xác nhận</button>
                <button asp-action="Index" type="submit" class="btn btn-red-custom">Trở về</button>
            </form>
        </div>
    </div>

</div>

<style>

</style>

@{
    if (ViewBag.Error != null)
    {
        <div class="show-toast position-fixed bottom-0 end-0 p-3">
            <vc:toast-component></vc:toast-component>
        </div>
    }
}

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}