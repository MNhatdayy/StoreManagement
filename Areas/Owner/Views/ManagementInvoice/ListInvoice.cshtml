@{
}
@model List<StoreManagement.DTO.InvoiceDTO>  
<div class="p-4">
    <div class="table--wrapper invoice-list">  
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Mã hóa đơn</th>
                    <th>Mã đơn đặt hàng</th>
                    <th>Thời gian</th>
                    <th>Phụ phí</th>
                    <th>Tổng tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var invoice in Model)
                {
                    <tr>
                        <td>@invoice.Id</td>
                        <td>@invoice.OrderId</td>
                        <td>@invoice.PayTime.ToString("HH:mm:ss yyyy-MM-dd")</td>
                        <td>@invoice.Charge</td>
                        <td>@invoice.TotalPrice</td>
                        <td>
                            <a href="/owner/ManagementInvoice/InvoiceDetails/@invoice.Id" class="btn btn-primary-custom">
                                Xem
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .invoice-list {
        height: 650px;
    }
</style>

