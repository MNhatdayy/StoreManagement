@{
    ViewData["Title"] = "Delete FoodItem";
}
@model StoreManagement.DTO.FoodItemDTO
<h2>Delete FoodItem</h2>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <p>Are you sure you want to delete @Model.Id</p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <button asp-action="Index" type="submit" class="btn btn-info">Cancel</button>
</form>
