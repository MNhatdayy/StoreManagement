@{
}
@model AppUser
<section class="vh-100 bg-gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="form--wrapper bg-white px-4 py-5 rounded-3">
                    <h3 class="text-black text-center">Đăng nhập</h3>
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="@Model.Email" class="form-label">Username</label>
                            <input type="email" class="form-control" placeholder="name@example.com">
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Password" class="form-label">Password</label>
                            <input type="password" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary w-100 mt-2">Đăng nhập</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>