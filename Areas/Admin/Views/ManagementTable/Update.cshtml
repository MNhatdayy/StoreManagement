@{
    ViewData["Title"] = "Update Table";
}
@model StoreManagement.DTO.TableDTO

<div class="container">
    <h2>Edit Table</h2>
    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Status"></label>
            <select asp-for="Status" class="form-control">
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StoreID"></label>
            <input asp-for="StoreID" type="number" class="form-control" />
            <span asp-validation-for="StoreID" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button asp-action="Index" type="submit" class="btn btn-info">Cancel</button>
    </form>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}